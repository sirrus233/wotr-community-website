{
    "compilerOptions": {
        "target": "esnext",
        "module": "nodenext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "jsx": "react",
        "allowJs": false,
        "outDir": "./dist",
        "moduleResolution": "nodenext"
    },
    "include": ["src/**/*"]
}
